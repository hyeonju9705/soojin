<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.conan.mapper.BoardAttachMapper">
   <insert id="insert">
      insert into tbl_attach(uuid,uploadPath,fileName,fileType,bno)
      values(#{uuid},#{uploadPath},#{fileName},#{fileType},#{bno})
   </insert>
   <delete id="delete">
      delete from tbl_attach where uuid=#{uuid}
   </delete>
   <delete id="deleteAll">
   	delete from tbl_attach where bno=#{bno}
   </delete>
   <select id="findByBno" resultType="org.conan.domain.BoardAttachVO">
      select * from tbl_attach where bno = #{bno}
   </select>
   <!-- uploadpath가 하루 전 폴더에 들어있는 첨부파일들을 삭제하기위함 -->
   <select id="getOldFiles" resultType="org.conan.domain.BoardAttachVO">
   	select * from tbl_attach
   	where uploadpath = date_format(date_sub(now(), interval 1 day),
   	'%Y\%m\%d');
   </select>
   
</mapper>